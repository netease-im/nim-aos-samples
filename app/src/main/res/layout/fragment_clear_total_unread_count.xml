<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:tools="http://schemas.android.com/tools">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="清空本地会话未读数:" />
		
		<!-- 操作说明区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
				android:background="#e8f5e8"
				android:padding="8dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="操作说明:"
					android:textStyle="bold" />
			
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="清空后，所有会话的未读数将重置为0。"
					android:textSize="12sp"
					android:textColor="#d63384" />
		</LinearLayout>
		
		
		<!-- 当前未读数显示区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
				android:background="#f0f0f0"
				android:padding="8dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="当前状态:"
					android:textStyle="bold" />
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="8dp">
				
				<Button
						android:id="@+id/btn_check_current_unread"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="查看当前未读数"
						android:textSize="12sp" />
				
				<Button
						android:id="@+id/btn_refresh_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="刷新状态"
						android:textSize="12sp"
						android:layout_marginStart="8dp" />
			
			</LinearLayout>
			
			<TextView
					android:id="@+id/tv_current_unread_count"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="当前总未读数: 未知"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
		</LinearLayout>
		
		<!-- 参数说明区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
				android:background="#f5f5f5"
				android:padding="8dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="接口说明:"
					android:textStyle="bold"
					android:textSize="14sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 方法名: clearTotalUnreadCount"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 参数: 无需传入参数"
					android:textSize="12sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 返回值: Void (无返回值)"
					android:textSize="12sp" />
			
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 影响: 所有会话未读数重置为0"
					android:textSize="12sp" />
		
		</LinearLayout>
	
	</LinearLayout>

</ScrollView>