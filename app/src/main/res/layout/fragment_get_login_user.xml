<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:tools="http://schemas.android.com/tools">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="获取当前登录用户:"
				android:textStyle="bold"
				android:textSize="16sp"
				android:padding="8dp" />
		
		<!-- 接口说明区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
				android:background="#f5f5f5"
				android:padding="12dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="接口说明:"
					android:textStyle="bold"
					android:textSize="14sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 方法名: getLoginUser()"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 参数: 无参数"
					android:textSize="12sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 返回类型: @Nullable String"
					android:textSize="12sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 功能: 获取当前登录用户账号"
					android:textSize="12sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 特点: 同步方法，立即返回结果"
					android:textSize="12sp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 说明: 未登录时返回null"
					android:textSize="12sp" />
		
		</LinearLayout>
		
		<!-- 使用场景区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
				android:background="#f8d7da"
				android:padding="12dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="使用场景:"
					android:textStyle="bold"
					android:textSize="14sp"
					android:textColor="#721c24" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 判断用户是否已登录"
					android:textSize="12sp"
					android:textColor="#721c24"
					android:layout_marginTop="4dp" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 获取当前用户身份信息"
					android:textSize="12sp"
					android:textColor="#721c24" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 用户身份验证和权限检查"
					android:textSize="12sp"
					android:textColor="#721c24" />
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="• 界面显示当前用户信息"
					android:textSize="12sp"
					android:textColor="#721c24" />
			
		</LinearLayout>
	
	</LinearLayout>

</ScrollView>