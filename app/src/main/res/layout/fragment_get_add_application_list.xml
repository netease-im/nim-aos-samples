<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:tools="http://schemas.android.com/tools">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="查询好友社申请列表:" />
		
		<!-- 用户账号输入区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="8dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="接口偏移量值(查询第一页默认0，第二页根据第一页返回结果字段中offset值确定)："
					android:textStyle="bold" />
			
			<EditText
					android:id="@+id/edt_offset"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:hint="offset值"
					android:inputType="textMultiLine"
					android:gravity="top"
					android:padding="8dp"
					android:background="@drawable/edittext_border"
					android:layout_marginTop="4dp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="接口查询数量(单次查询多少个，默认100)："
				android:textStyle="bold" />

			<EditText
				android:id="@+id/edt_limit"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="limit值"
				android:inputType="textMultiLine"
				android:gravity="top"
				android:padding="8dp"
				android:background="@drawable/edittext_border"
				android:layout_marginTop="4dp" />
		</LinearLayout>
		
		<!-- 快速操作区域 -->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="16dp"
				android:background="#f0f0f0"
				android:padding="8dp">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="快速操作:"
					android:textStyle="bold" />
			

			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="提示：可以手动输入用户账号，或点击添加测试账号"
					android:textSize="11sp"
					android:textColor="#888888"
					android:layout_marginTop="4dp" />
		</LinearLayout>

	
	</LinearLayout>

</ScrollView>